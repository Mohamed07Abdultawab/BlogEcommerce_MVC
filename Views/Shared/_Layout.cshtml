@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BlogEcommerce</title>

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BlogEcommerce.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-custom-dark fixed-top">
            <div class="container-fluid container-xl">
                <a class="navbar-brand logo-text" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-shopping-bag logo-icon-accent"></i> BlogEcommerce
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar" aria-controls="mainNavbar"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Blog" asp-action="Index">
                                <i class="fas fa-blog me-1"></i> Blog
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index">
                                <i class="fas fa-store me-1"></i> Products
                            </a>
                        </li>

                        @{
                            var cartController = User.Identity != null && User.Identity.IsAuthenticated ? "Cart" : "Account";
                            var cartAction = User.Identity != null && User.Identity.IsAuthenticated ? "Index" : "Login";

                                <li class="nav-item">
                                    <a class="nav-link cart-link-custom" asp-controller="@cartController" asp-action="@cartAction">
                                        <i class="fas fa-shopping-cart me-1"></i> Cart 
                                    @if (User.Identity != null && User.Identity.IsAuthenticated)
                                    {
                                                <span class="badge rounded-pill badge-accent-bg" id="cartCount">0</span>
                                    }
                                    </a>
                                </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="AboutUs">
                                <i class="fas fa-users me-1"></i> About Us
                            </a>
                        </li>
                    </ul>

                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                        <li class="nav-item">
                                            <a class="nav-link nav-link-admin" asp-controller="Admin" asp-action="Dashboard">
                                                <i class="fas fa-tachometer-alt me-1"></i> Admin
                                            </a>
                                        </li>
                            }

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-user-circle me-1"></i> @User.Identity.Name
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-dark" aria-labelledby="navbarDropdown">
                                        <li><a class="dropdown-item" asp-controller="Profile" asp-action="Index"><i class="fas fa-user me-2"></i> My Profile</a></li>
                                        <li><a class="dropdown-item" asp-controller="Profile" asp-action="Orders"><i class="fas fa-box me-2"></i> My Orders</a></li>
                                        <li><a class="dropdown-item" asp-controller="Profile" asp-action="Settings"><i class="fas fa-cog me-2"></i> Settings</a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-controller="Account" asp-action="Logout" method="post" class="m-0 p-0">
                                                <button type="submit" class="dropdown-item dropdown-logout-btn">
                                                    <i class="fas fa-sign-out-alt me-2"></i> Logout
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                        }
                        else
                        {
                                <li class="nav-item me-2">
                                    <a class="nav-link nav-link-auth" asp-controller="Account" asp-action="Login">
                                        <i class="fas fa-sign-in-alt me-1"></i> Login
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link btn-primary-accent text-white px-3 py-2 rounded-pill" asp-controller="Account" asp-action="Register">
                                        <i class="fas fa-user-plus me-1"></i> Register
                                    </a>
                                </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="main-content-wrapper">
        <main class="flex-grow-1">
            @RenderBody()
        </main>

    </div>

   

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
            <script src="~/js/cart-functions.js" asp-append-version="true"></script>
    }

    @await RenderSectionAsync("Scripts", required: false)
    @if (ViewData["ShowFooter"] as bool? == true)
    {
     <footer class="footer bg-custom-dark text-white mt-5 pt-5 pb-3">
        <div class="container-xl">
            <div class="row">
                <div class="col-md-4 mb-4">
                    <h5 class="footer-title logo-text mb-3">
                        <i class="fas fa-shopping-bag logo-icon-accent"></i> BlogEcommerce
                    </h5>
                    <p class="footer-text-light">
                        Your one-stop destination for quality products and insightful blog content. Shop smart, read more!
                    </p>
                    <div class="social-links mt-4">
                        <a href="#" class="social-link me-3"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="social-link me-3"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="social-link me-3"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="social-link"><i class="fab fa-linkedin-in"></i></a>
                    </div>
                </div>

                <div class="col-md-2 mb-4">
                    <h6 class="footer-title mb-3">Quick Links</h6>
                    <ul class="footer-links list-unstyled">
                        <li><a asp-controller="Home" asp-action="Index" class="footer-link">Home</a></li>
                        <li><a asp-controller="Products" asp-action="Index" class="footer-link">Shop</a></li>
                        <li><a asp-controller="Blog" asp-action="Index" class="footer-link">Blog</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy" class="footer-link">About Us</a></li>
                    </ul>
                </div>

                <div class="col-md-2 mb-4">
                    <h6 class="footer-title mb-3">Customer</h6>
                    <ul class="footer-links list-unstyled">
                        <li><a asp-controller="Account" asp-action="Login" class="footer-link">My Account</a></li>
                        <li><a asp-controller="Cart" asp-action="Index" class="footer-link">Shopping Cart</a></li>
                        <li><a asp-controller="Profile" asp-action="Orders" class="footer-link">Orders</a></li>
                        <li><a href="#" class="footer-link">Support</a></li>
                    </ul>
                </div>

                <div class="col-md-4 mb-4">
                    <h6 class="footer-title mb-3">Newsletter</h6>
                    <p class="footer-text-light">Subscribe to get special offers and updates!</p>
                    <div class="input-group newsletter-input-group mt-3">
                        <input type="email" class="form-control newsletter-input" placeholder="Your email">
                        <button class="btn btn-accent newsletter-button" type="button">
                            <i class="fas fa-paper-plane"></i>
                        </button>
                    </div>
                </div>
            </div>

            <div class="footer-bottom text-center pt-4 mt-4" style="border-top: 1px solid var(--color-border-dark);">
                <p class="mb-0 footer-text-light">&copy; 2025 BlogEcommerce. All rights reserved. | <a asp-area="" asp-controller="Home" asp-action="Privacy" class="footer-link">Privacy Policy</a></p>
            </div>
        </div>
    </footer>
    }
</body>
</html>