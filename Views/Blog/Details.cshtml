@model BlogEcommerce.Models.BlogPost

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <article>
        <h1>@Model.Title</h1>

        <p class="text-muted">
            By @Model.Author | @Model.CreatedDate.ToString("MMMM dd, yyyy")
            @if (!string.IsNullOrEmpty(Model.Category))
            {
                    <span class="badge bg-secondary">@Model.Category</span>
            }
        </p>

        <!-- Related Product Button -->
        @if (Model.RelatedProduct != null)
        {
                <div class="alert alert-info d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <strong>📦 Featured Product:</strong> @Model.RelatedProduct.Name
                        <br />
                        <small>@Model.RelatedProduct.Description.Substring(0, Math.Min(100, Model.RelatedProduct.Description.Length))...</small>
                    </div>
                    <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.RelatedProduct.Id" class="btn btn-primary">
                        View Product →
                    </a>
                </div>
        }

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
                <img src="@Model.ImageUrl" class="img-fluid mb-4 rounded shadow" alt="@Model.Title">
        }

        <div class="mt-4" style="line-height: 1.8; font-size: 1.1rem;">
            @Model.Content
        </div>

        <!-- Related Product Card at Bottom -->
        @if (Model.RelatedProduct != null)
        {
                <div class="card my-5 shadow">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">🛍️ Shop This Product</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4">
                            @if (!string.IsNullOrEmpty(Model.RelatedProduct.ImageUrl))
                            {
                                        <img src="@Model.RelatedProduct.ImageUrl" class="img-fluid rounded" alt="@Model.RelatedProduct.Name">
                            }
                            else
                            {
                                        <img src="https://via.placeholder.com/300x300?text=Product" class="img-fluid rounded" alt="Product">
                            }
                            </div>
                            <div class="col-md-8">
                                <h3>@Model.RelatedProduct.Name</h3>
                                <p class="text-muted">@Model.RelatedProduct.Description</p>
                                <h4 class="text-success mb-3">$@Model.RelatedProduct.Price.ToString("N2")</h4>
                                <div class="d-flex gap-2">
                                    <a asp-controller="Products" asp-action="Details" asp-route-id="@Model.RelatedProduct.Id" class="btn btn-primary btn-lg">
                                        View Product Details
                                    </a>
                                @if (Model.RelatedProduct.Stock > 0)
                                {
                                            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline">
                                                <input type="hidden" name="productId" value="@Model.RelatedProduct.Id" />
                                                <input type="hidden" name="quantity" value="1" />
                                                <button type="submit" class="btn btn-success btn-lg">
                                                    Add to Cart
                                                </button>
                                            </form>
                                }
                                else
                                {
                                            <button class="btn btn-secondary btn-lg" disabled>Out of Stock</button>
                                }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        }

        @if (User.IsInRole("Admin"))
        {
                <hr class="mt-5">
                <div class="mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
        }
        else
        {
                <hr class="mt-5">
                <div class="mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
        }
    </article>

    <hr class="my-5">

    <!-- Comments Section -->
    <div class="row">
        <div class="col-12">
            <h3>Comments (@Model.Comments.Count)</h3>

            <!-- Add Comment Form -->
            @if (User.Identity?.IsAuthenticated == true)
            {
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Leave a Comment</h5>
                            <form asp-action="AddComment" method="post">
                                <input type="hidden" name="blogPostId" value="@Model.Id" />

                                <div class="mb-3">
                                    <label for="comment" class="form-label">Your Comment</label>
                                    <textarea name="comment" id="comment" class="form-control" rows="4" required placeholder="Share your thoughts..."></textarea>
                                </div>

                                <button type="submit" class="btn btn-primary">Post Comment</button>
                            </form>
                        </div>
                    </div>
            }
            else
            {
                    <div class="alert alert-info">
                        <a asp-controller="Account" asp-action="Login">Login</a> to leave a comment.
                    </div>
            }

            <!-- Display Comments -->
            @if (Model.Comments.Any())
            {
                    <div class="comments-list">
                    @foreach (var comment in Model.Comments.OrderByDescending(c => c.CommentDate))
                    {
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <h6 class="card-subtitle mb-2 text-primary">@comment.UserName</h6>
                                            <small class="text-muted">@comment.CommentDate.ToString("MMM dd, yyyy HH:mm")</small>
                                        </div>
                                        <p class="card-text mt-2">@comment.Comment</p>
                                    </div>
                                </div>
                    }
                    </div>
            }
            else
            {
                    <p class="text-muted">No comments yet. Be the first to comment!</p>
            }
        </div>
    </div>
</div>