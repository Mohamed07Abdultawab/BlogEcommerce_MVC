@model BlogEcommerce.Models.BlogPost

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <article>
        <h1>@Model.Title</h1>

        <p class="text-muted">
            By @Model.Author | @Model.CreatedDate.ToString("MMMM dd, yyyy")
            @if (!string.IsNullOrEmpty(Model.Category))
            {
                    <span class="badge bg-secondary">@Model.Category</span>
            }
        </p>

        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
                <img src="@Model.ImageUrl" class="img-fluid mb-4" alt="@Model.Title">
        }

        <div class="mt-4" style="line-height: 1.8; font-size: 1.1rem;">
            @Model.Content
        </div>

        @if (User.IsInRole("Admin"))
        {
                <hr class="mt-5">
                <div class="mt-4">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
        }
        else
        {
                <hr class="mt-5">
                <div class="mt-4">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
        }
    </article>

    <hr class="my-5">

    <!-- Comments Section -->
    <div class="row">
        <div class="col-12">
            <h3>Comments (@Model.Comments.Count)</h3>

            <!-- Add Comment Form -->
            @if (User.Identity?.IsAuthenticated == true)
            {
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">Leave a Comment</h5>
                            <form asp-action="AddComment" method="post">
                                <input type="hidden" name="blogPostId" value="@Model.Id" />

                                <div class="mb-3">
                                    <label for="comment" class="form-label">Your Comment</label>
                                    <textarea name="comment" id="comment" class="form-control" rows="4" required placeholder="Share your thoughts..."></textarea>
                                </div>

                                <button type="submit" class="btn btn-primary">Post Comment</button>
                            </form>
                        </div>
                    </div>
            }
            else
            {
                    <div class="alert alert-info">
                        <a asp-controller="Account" asp-action="Login">Login</a> to leave a comment.
                    </div>
            }

            <!-- Display Comments -->
            @if (Model.Comments.Any())
            {
                    <div class="comments-list">
                    @foreach (var comment in Model.Comments.OrderByDescending(c => c.CommentDate))
                    {
                                <div class="card mb-3">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <h6 class="card-subtitle mb-2 text-primary">@comment.UserName</h6>
                                            <small class="text-muted">@comment.CommentDate.ToString("MMM dd, yyyy HH:mm")</small>
                                        </div>
                                        <p class="card-text mt-2">@comment.Comment</p>
                                    </div>
                                </div>
                    }
                    </div>
            }
            else
            {
                    <p class="text-muted">No comments yet. Be the first to comment!</p>
            }
        </div>
    </div>
</div>