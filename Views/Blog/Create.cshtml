@model BlogEcommerce.Models.BlogPost

@{
    ViewData["Title"] = "Create Blog Post";
    // تحديد لون التمييز هنا ليكون أزرق للأزرار الرئيسية
    var accentColorClass = "btn-primary-accent";
}

<div class="container-xl py-5">
    <h1 class="page-title fw-bold mb-4">✍️ Create New Blog Post</h1>

    <hr class="section-divider mb-5" />
    <div class="row justify-content-center">
        <div class="col-lg-9 col-xl-8">
            <div class="card p-4 form-card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger-custom text-danger-accent mb-4 p-2"></div>

                        <div class="form-group mb-4">
                            <label asp-for="Title" class="form-label control-label fw-bold">Title</label>
                            <input asp-for="Title" class="form-control form-control-custom" placeholder="The headline of your post" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Author" class="form-label control-label fw-bold">Author</label>
                            <input asp-for="Author" class="form-control form-control-custom" placeholder="e.g., John Doe" />
                            <span asp-validation-for="Author" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Category" class="form-label control-label fw-bold">Category</label>
                            <input asp-for="Category" class="form-control form-control-custom" placeholder="e.g., Tech, Lifestyle, Reviews" />
                            <span asp-validation-for="Category" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="ImageUrl" class="form-label control-label fw-bold">Image URL</label>
                            <input asp-for="ImageUrl" class="form-control form-control-custom" placeholder="https://example.com/image.jpg" />
                            <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="RelatedProductId" class="form-label control-label fw-bold">Related Product (Optional)</label>
                            <select asp-for="RelatedProductId" class="form-select form-select-custom" asp-items="ViewBag.Products">
                                <option value="">-- Select a product (optional) --</option>
                            </select>
                            <small class="form-text text-secondary">Link this post to a product for direct promotion.</small>
                        </div>

                        <div class="form-group mb-5">
                            <label asp-for="Content" class="form-label control-label fw-bold">Content</label>
                            <textarea asp-for="Content" class="form-control form-control-custom content-textarea" rows="12" placeholder="Write your blog post content here..."></textarea>
                            <span asp-validation-for="Content" class="text-danger small"></span>
                        </div>

                        <div class="form-group d-flex justify-content-start gap-3">
                            <button type="submit" class="btn @accentColorClass btn-lg px-4">
                                <i class="fas fa-save me-2"></i> Publish Post
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="fas fa-times me-2"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}