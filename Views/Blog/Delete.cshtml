@model BlogEcommerce.Models.BlogPost

@{
    ViewData["Title"] = "Delete Blog Post";
}

<div class="container-xl py-5">

    <h1 class="page-title fw-bold mb-3 text-danger-accent">
        <i class="fas fa-exclamation-triangle me-2"></i> Delete Blog Post
    </h1>

    <h3 class="text-secondary fw-normal mb-5">
        Are you sure you want to permanently delete this post? This action cannot be undone.
    </h3>

    <hr class="section-divider mb-5" />

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card p-4 delete-details-card shadow-lg mb-5">
                <div class="card-body">
                    <h5 class="card-title fw-bold text-primary-text mb-4">Post Details</h5>

                    <dl class="row post-details-list">
                        <dt class="col-sm-3 fw-bold">Title</dt>
                        <dd class="col-sm-9 text-primary-text">@Model.Title</dd>

                        <dt class="col-sm-3 fw-bold">Author</dt>
                        <dd class="col-sm-9 text-primary-text">@Model.Author</dd>

                        <dt class="col-sm-3 fw-bold">Created Date</dt>
                        <dd class="col-sm-9 text-secondary">@Model.CreatedDate.ToString("MMMM dd, yyyy")</dd>

                        <dt class="col-sm-3 fw-bold">Category</dt>
                        <dd class="col-sm-9 text-secondary">
                            <span class="badge rounded-pill bg-gray-light text-primary">@Model.Category</span>
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="text-center">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger-custom btn-lg px-4 me-3">
                        <i class="fas fa-trash-alt me-2"></i> Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                        <i class="fas fa-times me-2"></i> Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>