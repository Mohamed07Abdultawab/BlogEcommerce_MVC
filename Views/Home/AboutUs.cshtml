@* About Us Page *@
@{
    ViewData["Title"] = "About Us";
}
@{
    ViewBag.ShowFooter = true;
}

<div class="container-xl py-5">

    <section class="about-hero-section text-center py-5 mb-5 border-bottom section-divider-light">
        <h1 class="page-title fw-bold display-4 mb-3">
            Your Destination for Commerce & Content.
        </h1>
        <p class="lead text-secondary-text mb-4">
            We are more than just a store; we are a community connecting smart shoppers with insightful ideas.
        </p>
    </section>

    <section class="mission-section py-5">
        <div class="row align-items-center">

            <div class="col-lg-6 mb-4 mb-lg-0">
                <h2 class="section-heading fw-bold mb-4">Our Unique Dual Identity</h2>

                <div class="mission-point mb-4">
                    <h5 class="fw-bold text-primary-accent"><i class="fas fa-store me-2"></i> The Commerce Side</h5>
                    <p class="text-secondary-text">
                        We curate only the highest quality products, focusing on minimalist design and long-term value. Shopping should be simple, efficient, and rewarding.
                    </p>
                </div>

                <div class="mission-point">
                    <h5 class="fw-bold text-primary-accent"><i class="fas fa-blog me-2"></i> The Content Side</h5>
                    <p class="text-secondary-text">
                        Our blog provides expert insights, product reviews, and trends, ensuring you make informed decisions. We empower our customers with knowledge.
                    </p>
                </div>
            </div>

            <div class="col-lg-6 text-center">
                <img src="~/images/OurVision3.jpg" 
                     alt="Our Vision" 
                     class="img-fluid rounded-lg shadow-lg" 
                     style="max-height: 450px;">
            </div>
        </div>
    </section>

    <section class="values-section py-5 mt-5">
        <h2 class="section-heading fw-bold text-center mb-5">Our Core Values</h2>

        <div class="row g-4 text-center">

            <div class="col-md-4">
                <div class="value-card p-4 h-100">
                    <i class="fas fa-lightbulb fa-3x text-primary-accent mb-3"></i>
                    <h5 class="fw-bold">Transparency</h5>
                    <p class="small text-secondary-text">We believe in clear pricing and honest reviews.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="value-card p-4 h-100">
                    <i class="fas fa-rocket fa-3x text-success-accent mb-3"></i>
                    <h5 class="fw-bold">Efficiency</h5>
                    <p class="small text-secondary-text">Fast shipping and a seamless shopping experience.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="value-card p-4 h-100">
                    <i class="fas fa-hands-helping fa-3x text-info-accent mb-3"></i>
                    <h5 class="fw-bold">Support</h5>
                    <p class="small text-secondary-text">A dedicated team ready to help you 24/7.</p>
                </div>
            </div>
        </div>
    </section>
</div>