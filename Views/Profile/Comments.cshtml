@model IEnumerable<BlogEcommerce.Models.BlogComment>

@{
    ViewData["Title"] = "My Comments";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Comments</h1>
        <a asp-action="Index" class="btn btn-secondary">← Back to Profile</a>
    </div>

    @if (Model.Any())
    {
            <div class="row">
            @foreach (var comment in Model)
            {
                        <div class="col-12 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div>
                                            <h6 class="mb-2">
                                                <a asp-controller="Blog" asp-action="Details" asp-route-id="@comment.BlogPostId">
                                            @comment.BlogPost?.Title
                                                </a>
                                            </h6>
                                            <small class="text-muted">@comment.CommentDate.ToString("MMM dd, yyyy HH:mm")</small>
                                        </div>
                                    </div>
                                    <p class="mt-3 mb-2">@comment.Comment</p>
                                    <a asp-controller="Blog" asp-action="Details" asp-route-id="@comment.BlogPostId" class="btn btn-sm btn-outline-primary">
                                        View Blog Post
                                    </a>
                                </div>
                            </div>
                        </div>
            }
            </div>
    }
    else
    {
            <div class="alert alert-info text-center">
                <h4>No Comments Yet</h4>
                <p>You haven't commented on any blog posts yet.</p>
                <a asp-controller="Blog" asp-action="Index" class="btn btn-primary">Browse Blog Posts</a>
            </div>
    }
</div>