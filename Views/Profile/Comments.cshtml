@model IEnumerable<BlogEcommerce.Models.BlogComment>

@{
    ViewData["Title"] = "My Comments";
}

<div class="container-xl py-5">

    <div class="d-flex justify-content-between align-items-center mb-5 border-bottom pb-3">
        <h1 class="page-title fw-bold"><i class="fas fa-comments me-2"></i> My Comments</h1>
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
            <i class="fas fa-arrow-left me-2"></i> Back to Profile
        </a>
    </div>

    @if (Model.Any())
    {
            <div class="row g-4">
            @foreach (var comment in Model)
            {
                    <div class="col-12">
                        <div class="card comment-user-card shadow-sm">
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1">
                                        <h6 class="mb-2 fw-bold">
                                            <span class="text-secondary-text me-2">Posted on:</span>
                                            <a asp-controller="Blog" asp-action="Details" asp-route-id="@comment.BlogPostId" class="text-primary-link">
                                            @comment.BlogPost?.Title
                                            </a>
                                        </h6>
                                        <small class="text-muted"><i class="far fa-calendar-alt me-1"></i> @comment.CommentDate.ToString("MMM dd, yyyy HH:mm")</small>
                                    </div>
                                    <a asp-controller="Blog" asp-action="Details" asp-route-id="@comment.BlogPostId" class="btn btn-sm btn-primary-accent ms-3">
                                        <i class="fas fa-book-open me-1"></i> View Post
                                    </a>
                                </div>

                                <div class="comment-content-preview mt-3 pt-3 border-top border-light-gray">
                                    <p class="mb-0 text-primary-text">@comment.Comment</p>
                                </div>

                            </div>
                        </div>
                    </div>
            }
            </div>
    }
    else
    {
            <div class="alert alert-info-custom text-center py-5 my-5">
                <i class="fas fa-comment-slash fa-4x text-secondary-text mb-4"></i>
                <h4 class="fw-bold text-primary-text">No Comments Yet</h4>
                <p class="text-secondary fs-5 mb-4">You haven't commented on any blog posts yet. Start the conversation!</p>
                <a asp-controller="Blog" asp-action="Index" class="btn btn-primary-accent btn-lg">
                    <i class="fas fa-blog me-2"></i> Browse Blog Posts
                </a>
            </div>
    }
</div>