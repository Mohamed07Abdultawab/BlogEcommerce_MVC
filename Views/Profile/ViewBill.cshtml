@model BlogEcommerce.Models.OrderBillViewModel

@{
    ViewData["Title"] = $"Invoice #{Model.Order.Id}";
    Layout = null; // No layout for printable invoice

    // Status Class Mapping (Monochrome/Standard Colors)
    string GetStatusClass(string status) => status.ToLower() switch
    {
        "pending" => "status-pending",
        "processing" => "status-processing",
        "shipped" => "status-shipped",
        "completed" => "status-completed",
        "cancelled" => "status-cancelled",
        _ => "status-secondary"
    };
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        /* Global Monochrome Colors */
        :root {
            --monochrome-dark: #222222;
            --monochrome-medium: #666666;
            --monochrome-light: #E9ECEF;
            --accent-blue: #007BFF;
            --accent-green: #28A745;
            --accent-red: #DC3545;
        }

        body {
            font-family: 'Inter', sans-serif;
            padding: 0;
            background-color: var(--monochrome-light);
            color: var(--monochrome-dark);
            min-height: 100vh;
        }

        .invoice-container {
            max-width: 900px;
            margin: 40px auto;
            background: white;
            padding: 40px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            border-radius: 12px;
            border: 1px solid var(--monochrome-light);
        }

        .invoice-header {
            border-bottom: 2px solid var(--monochrome-dark);
            padding-bottom: 15px;
            margin-bottom: 30px;
        }

        .company-logo {
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--monochrome-dark);
        }
        .logo-accent {
            color: var(--accent-blue);
        }

        .invoice-title {
            font-size: 2.5rem;
            font-weight: 800;
            color: var(--accent-blue);
        }

        .invoice-details-box {
            background: var(--monochrome-light);
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 30px;
        }

        .section-title {
            font-weight: 700;
            color: var(--monochrome-dark);
            border-bottom: 1px dashed var(--monochrome-medium);
            padding-bottom: 8px;
            margin-bottom: 15px;
            font-size: 1.2rem;
        }

        .info-label {
            font-weight: 600;
            color: var(--monochrome-medium);
        }

        .invoice-table {
            margin-top: 30px;
        }

        .invoice-table th {
            background: var(--monochrome-dark);
            color: white;
            padding: 12px;
            font-weight: 600;
        }

        .invoice-table tbody tr:nth-child(even) {
            background-color: var(--monochrome-light);
        }

        .total-section {
            background: var(--monochrome-light);
            padding: 20px;
            border-radius: 8px;
            margin-top: 20px;
            border: 1px solid var(--monochrome-medium);
        }

        .grand-total {
            font-size: 1.6rem;
            font-weight: 800;
            color: var(--accent-red); /* استخدام الأحمر للإجمالي النهائي */
        }

        /* Status Badges */
        .status-badge {
            padding: 6px 15px;
            border-radius: 4px;
            font-weight: 600;
            display: inline-block;
            text-transform: uppercase;
        }

        .status-pending { background: #fff3cd; color: #856404; }
        .status-processing { background: #cce5ff; color: #004085; }
        .status-shipped { background: #d1ecf1; color: #0c5460; }
        .status-completed { background: #d4edda; color: #0f5132; }
        .status-cancelled { background: #f8d7da; color: #721c24; }
        .status-secondary { background: var(--monochrome-light); color: var(--monochrome-medium); }

        .footer-note {
            margin-top: 40px;
            padding-top: 20px;
            border-top: 1px dashed var(--monochrome-medium);
            color: var(--monochrome-medium);
            font-size: 0.85rem;
        }

        .product-image {
            width: 50px;
            height: 50px;
            object-fit: cover;
            border-radius: 4px;
            border: 1px solid var(--monochrome-light);
        }

        /* Print Settings */
        .print-button {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
        }

        @@media print {
            body { background: white; padding: 0; }
            .invoice-container { box-shadow: none; padding: 0; margin: 0; border: none; }
            .print-button, .no-print { display: none !important; }
            .invoice-table th { background: #CCC !important; color: black !important; -webkit-print-color-adjust: exact; }
            .invoice-details-box, .total-section { background: var(--monochrome-light) !important; border: 1px solid #CCC; -webkit-print-color-adjust: exact; }
            .grand-total { color: var(--monochrome-dark) !important; -webkit-print-color-adjust: exact; } /* طباعة المبلغ النهائي بالأسود */
        }
    </style>
</head>
<body>
    <div class="print-button no-print d-flex gap-2">
        <button onclick="window.print()" class="btn btn-dark btn-lg shadow-sm">
            <i class="fas fa-print"></i> Print
        </button>
        <button onclick="downloadPDF()" class="btn btn-primary btn-lg shadow-sm">
            <i class="fas fa-download"></i> Download PDF
        </button>
    </div>

    <div class="invoice-container">
        <div class="invoice-header">
            <div class="row">
                <div class="col-md-6">
                    <div class="company-logo mb-2">
                        <i class="fas fa-shopping-bag logo-accent"></i> @Model.CompanyName
                    </div>
                    <p class="mb-1"><i class="fas fa-map-marker-alt me-2"></i>@Model.CompanyAddress, @Model.CompanyCity</p>
                    <p class="mb-1"><i class="fas fa-phone me-2"></i> @Model.CompanyPhone</p>
                    <p class="mb-0"><i class="fas fa-envelope me-2"></i> @Model.CompanyEmail</p>
                </div>
                <div class="col-md-6 text-end">
                    <h1 class="invoice-title mb-3">INVOICE</h1>
                    <p class="mb-1 info-label">Invoice #:</p>
                    <p class="mb-1 fw-bold">INV-@Model.Order.Id.ToString("D6")</p>
                    <p class="mb-1 info-label">Order Date:</p>
                    <p class="mb-1 fw-bold">@Model.Order.OrderDate.ToString("MMM dd, yyyy")</p>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-6">
                        <div class="invoice-details-box">
                            <h5 class="section-title"><i class="fas fa-user"></i> Bill To:</h5>
                            <p class="mb-1"><strong>@Model.Order.CustomerName</strong></p>
                            <p class="mb-1">@Model.Order.Email</p>
                            <p class="mb-1">@Model.Order.Phone</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="invoice-details-box">
                            <h5 class="section-title"><i class="fas fa-shipping-fast"></i> Ship To:</h5>
                            <p class="mb-1"><strong>@Model.Order.CustomerName</strong></p>
                            <p class="mb-1">@Model.Order.Address</p>
                            <p class="mb-1">@Model.Order.City, @Model.Order.ZipCode</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="invoice-details-box h-100">
                    <h5 class="section-title"><i class="fas fa-file-invoice"></i> Summary</h5>
                    <p class="mb-2"><strong>Payment Method:</strong> COD</p>
                    <p class="mb-3"><strong>Status:</strong></p>
                    <span class="status-badge @GetStatusClass(Model.Order.Status)">
                        @Model.Order.Status
                    </span>
                    <p class="mt-3"><strong>Payment Status:</strong>
                        @if (Model.Order.Status == "Completed")
                        {
                                <span class="badge status-completed">Paid</span>
                        }
                        else
                        {
                                <span class="badge status-pending">Pending</span>
                        }
                    </p>
                </div>
            </div>
        </div>

        <table class="table invoice-table table-bordered">
            <thead>
                <tr>
                    <th style="width: 60px;">#</th>
                    <th style="width: 280px;">Product Description</th>
                    <th style="width: 120px;" class="text-center">Quantity</th>
                    <th style="width: 120px;" class="text-end">Unit Price</th>
                    <th style="width: 140px;" class="text-end">Total</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int itemNumber = 1;
                }
                @foreach (var item in Model.Order.OrderItems)
                {
                        <tr>
                            <td class="text-center">@itemNumber</td>
                            <td>
                                <div class="d-flex align-items-center">
                                @if (!string.IsNullOrEmpty(item.Product?.ImageUrl))
                                {
                                        <img src="@item.Product.ImageUrl" alt="@item.Product.Name" class="product-image me-2">
                                }
                                    <div>
                                        <strong>@item.Product?.Name</strong>
                                    @if (!string.IsNullOrEmpty(item.Product?.Category))
                                    {
                                                <br>

                                        <small class="text-muted">Category: @item.Product.Category</small>
                                    }
                                    </div>
                                </div>
                            </td>
                            <td class="text-center">@item.Quantity</td>
                            <td class="text-end">$@item.Price.ToString("N2")</td>
                            <td class="text-end fw-bold">$@((item.Price * item.Quantity).ToString("N2"))</td>
                        </tr>
                    itemNumber++;
                }
            </tbody>
        </table>

        <div class="row">
            <div class="col-md-6 offset-md-6">
                <div class="total-section">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="info-label">Subtotal:</span>
                        <span>$@Model.Order.TotalAmount.ToString("N2")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="info-label">Tax (0%):</span>
                        <span>$0.00</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="info-label">Shipping:</span>
                        <span class="text-success fw-bold">FREE</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between">
                        <span class="info-label fs-5">Grand Total:</span>
                        <span class="grand-total">$@Model.Order.TotalAmount.ToString("N2")</span>
                    </div>
                </div>
            </div>
        </div>

        <div class="footer-note text-center">
            <p><strong>Thank you for your business!</strong></p>
            <p class="mb-1">For any questions regarding this invoice, please contact us at:</p>
            <p class="mb-3">
                <i class="fas fa-envelope"></i> @Model.CompanyEmail | 
                <i class="fas fa-phone"></i> @Model.CompanyPhone
            </p>
            <p class="mb-0"><small>This is a computer-generated invoice and does not require a signature.</small></p>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
    <script>
        function downloadPDF() {
            const element = document.querySelector('.invoice-container');
            // Remove print buttons before generating PDF
            const buttons = document.querySelector('.print-button');
            buttons.style.display = 'none';

            const opt = {
                margin: 10,
                filename: '@($"Invoice-{Model.Order.Id}.pdf")',
                image: { type: 'jpeg', quality: 0.98 },
                html2canvas: { scale: 2 },
                jsPDF: { unit: 'mm', format: 'a4', orientation: 'portrait' }
            };

            html2pdf().set(opt).from(element).save().then(() => {
                // Restore print buttons after generation
                buttons.style.display = 'flex';
            });
        }
    </script>
</body>
</html>