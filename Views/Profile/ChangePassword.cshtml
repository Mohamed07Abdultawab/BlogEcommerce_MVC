@model BlogEcommerce.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
    var accentColorClass = "btn-primary-accent";
}

<div class="container-xl py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">

            <div class="card login-card shadow-lg p-4">
                <div class="card-header bg-gray-light">
                    <h4 class="mb-0 fw-bold text-primary-text">
                        <i class="fas fa-lock me-2"></i> Change Password
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="ChangePassword" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger-custom text-danger-accent mb-4 p-2 small"></div>

                        <div class="form-group mb-4">
                            <label asp-for="CurrentPassword" class="form-label fw-bold small">Current Password</label>
                            <div class="input-group">
                                <input asp-for="CurrentPassword" id="CurrentPassword" class="form-control form-control-custom" type="password" required />
                                <button class="btn btn-outline-secondary" type="button" onclick="togglePasswordVisibility('CurrentPassword')" aria-label="Toggle Current Password Visibility">
                                    <i class="fas fa-eye" id="CurrentPasswordToggleIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="CurrentPassword" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="NewPassword" class="form-label fw-bold small">New Password</label>
                            <div class="input-group">
                                <input asp-for="NewPassword" id="NewPassword" class="form-control form-control-custom" type="password" required />
                                <button class="btn btn-outline-secondary" type="button" onclick="togglePasswordVisibility('NewPassword')" aria-label="Toggle New Password Visibility">
                                    <i class="fas fa-eye" id="NewPasswordToggleIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger small"></span>
                            <small class="text-secondary">Minimum 6 characters, must contain uppercase, lowercase, and digit</small>
                        </div>

                        <div class="form-group mb-5">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold small">Confirm New Password</label>
                            <div class="input-group">
                                <input asp-for="ConfirmPassword" id="ConfirmPassword" class="form-control form-control-custom" type="password" required />
                                <button class="btn btn-outline-secondary" type="button" onclick="togglePasswordVisibility('ConfirmPassword')" aria-label="Toggle Confirm Password Visibility">
                                    <i class="fas fa-eye" id="ConfirmPasswordToggleIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-3">
                            <button type="submit" class="btn @accentColorClass btn-lg">
                                <i class="fas fa-save me-2"></i> Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-times me-2"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}