@model BlogEcommerce.Models.Order

@{
    ViewData["Title"] = $"Order #{Model.Id}";
    // دالة مساعدة للحصول على لون Badge بناءً على الحالة (User View)
    string GetStatusClass(string status) => status switch
    {
        "Pending" => "bg-warning-custom text-dark",
        "Processing" => "bg-primary-accent",
        "Shipped" => "bg-info-accent",
        "Completed" => "bg-success-accent",
        "Cancelled" => "bg-danger-custom",
        _ => "bg-secondary-monochrome"
    };
}

<div class="container-xl py-5">

    <div class="d-flex justify-content-between align-items-center mb-5 border-bottom pb-3">
        <h1 class="page-title fw-bold">Order <span class="text-primary-accent">#@Model.Id</span></h1>
        <a asp-action="Orders" class="btn btn-outline-secondary btn-lg">
            <i class="fas fa-arrow-left me-2"></i> Back to Orders
        </a>
    </div>

    <div class="row g-4">

        <div class="col-lg-8">
            <div class="card order-items-card shadow-sm mb-4">
                <div class="card-header bg-gray-light">
                    <h5 class="mb-0 fw-bold text-primary-text"><i class="fas fa-list-alt me-2"></i> Order Items</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-monochrome table-details mb-0">
                            <thead>
                                <tr class="table-header-monochrome">
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(item.Product?.ImageUrl))
                                                {
                                                        <img src="@item.Product.ImageUrl" alt="@item.Product.Name" class="cart-item-img-small me-3">
                                                }
                                                    <div>
                                                        <strong class="text-primary-link">@item.Product?.Name</strong><br>
                                                        <small class="text-secondary">@item.Product?.Category</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>$@item.Price.ToString("N2")</td>
                                            <td>@item.Quantity</td>
                                            <td><strong class="text-error-accent">$@((item.Price * item.Quantity).ToString("N2"))</strong></td>
                                        </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-footer-monochrome">
                                    <td colspan="3" class="text-end fw-bold">Grand Total:</td>
                                    <td><strong class="text-error-accent fs-5">$@Model.TotalAmount.ToString("N2")</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>

            <div class="text-center mt-3 p-3 bg-gray-light rounded">
                <p class="mb-0 text-secondary-text">Need assistance with this order? <a href="#" class="text-accent-blue fw-bold">Contact Customer Support</a></p>
            </div>
        </div>

        <div class="col-lg-4">

            <div class="card order-status-card shadow-sm mb-4">
                <div class="card-header bg-custom-dark text-white">
                    <h6 class="mb-0 fw-bold"><i class="fas fa-history me-2"></i> Order Status</h6>
                </div>
                <div class="card-body">
                    <p class="mb-3">
                        <strong class="small">Current Status:</strong><br />
                        <span class="badge rounded-pill @GetStatusClass(Model.Status) fs-6 text-white p-2">
                            @Model.Status
                        </span>
                    </p>
                    <p class="mb-4">
                        <strong class="small">Order Date:</strong><br />
                        @Model.OrderDate.ToString("MMMM dd, yyyy HH:mm")
                    </p>

                    <div class="d-grid gap-2">
                        <a asp-action="ViewBill" asp-route-id="@Model.Id" target="_blank" class="btn btn-success-accent btn-lg">
                            <i class="fas fa-file-invoice-dollar me-2"></i> View Bill
                        </a>
                    </div>

                </div>
            </div>

            <div class="card order-info-card shadow-sm mb-4">
                <div class="card-header bg-gray-light">
                    <h6 class="mb-0 fw-bold text-primary-text"><i class="fas fa-truck me-2"></i> Shipping Address</h6>
                </div>
                <div class="card-body">
                    <p class="fw-bold mb-1 text-primary-text">@Model.CustomerName</p>
                    <address class="mb-0 text-secondary-text">
                        @Model.Address<br />
                        @Model.City, @Model.ZipCode
                    </address>
                </div>
            </div>

            <div class="card order-info-card shadow-sm">
                <div class="card-header bg-gray-light">
                    <h6 class="mb-0 fw-bold text-primary-text"><i class="fas fa-envelope me-2"></i> Contact & Payment</h6>
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>Email:</strong><br /><a href="mailto:@Model.Email" class="text-primary-link">@Model.Email</a></p>
                    <p class="mb-2"><strong>Phone:</strong><br />@Model.Phone</p>
                    <hr class="section-divider-light" />
                    <p class="mb-0"><strong>Payment:</strong><br />Cash on Delivery (Assumed)</p>
                </div>
            </div>
        </div>
    </div>
</div>