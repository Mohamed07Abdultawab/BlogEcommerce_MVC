@model IEnumerable<BlogEcommerce.Models.ProductReview>

@{
    ViewData["Title"] = "My Reviews";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>My Reviews</h1>
        <a asp-action="Index" class="btn btn-secondary">← Back to Profile</a>
    </div>

    @if (Model.Any())
    {
            <div class="row">
            @foreach (var review in Model)
            {
                        <div class="col-md-6 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <div class="d-flex align-items-start mb-3">
                                @if (!string.IsNullOrEmpty(review.Product?.ImageUrl))
                                {
                                                <img src="@review.Product.ImageUrl" alt="@review.Product.Name" style="width: 80px; height: 80px; object-fit: cover;" class="me-3 rounded">
                                }
                                        <div>
                                            <h6 class="mb-1">@review.Product?.Name</h6>
                                            <div class="mb-2">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= review.Rating)
                                            {
                                                                <span class="text-warning">★</span>
                                            }
                                            else
                                            {
                                                                <span class="text-muted">★</span>
                                            }
                                        }
                                            </div>
                                            <small class="text-muted">@review.ReviewDate.ToString("MMM dd, yyyy")</small>
                                        </div>
                                    </div>
                                    <p class="card-text">@review.Comment</p>
                                    <div class="d-flex gap-2">
                                        <a asp-controller="Products" asp-action="Details" asp-route-id="@review.ProductId" class="btn btn-sm btn-outline-primary">
                                            View Product
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
            }
            </div>
    }
    else
    {
            <div class="alert alert-info text-center">
                <h4>No Reviews Yet</h4>
                <p>You haven't written any product reviews yet.</p>
                <a asp-controller="Products" asp-action="Index" class="btn btn-primary">Browse Products</a>
            </div>
    }
</div>