@* User Profile: Settings *@
@{
    ViewData["Title"] = "Account Settings";
}

<div class="container-xl py-5">

    <div class="d-flex justify-content-between align-items-center mb-5 border-bottom pb-3">
        <h1 class="page-title fw-bold"><i class="fas fa-cog me-2"></i> Account Settings</h1>
        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
            <i class="fas fa-arrow-left me-2"></i> Back to Profile
        </a>
    </div>

    <div class="row g-4">

        <div class="col-lg-6 mb-4">
            <div class="card settings-card shadow-sm h-100">
                <div class="card-header bg-gray-light">
                    <h5 class="mb-0 fw-bold text-primary-text"><i class="fas fa-shield-alt me-2"></i> Security</h5>
                </div>
                <div class="card-body p-4">
                    <p class="mb-2"><strong>Email:</strong> <span class="text-primary-text">@ViewBag.Email</span></p>
                    <p class="mb-4">
                        <strong>Email Status:</strong> 
                        @if (ViewBag.EmailConfirmed)
                        {
                                <span class="badge rounded-pill bg-success-accent text-white p-2">Verified</span>
                        }
                        else
                        {
                                <span class="badge rounded-pill bg-warning-custom text-dark p-2">Not Verified</span>
                        }
                    </p>
                    <a asp-action="ChangePassword" class="btn btn-primary-accent">
                        <i class="fas fa-lock me-1"></i> Change Password
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-4">
            <div class="card settings-card shadow-sm h-100">
                <div class="card-header bg-gray-light">
                    <h5 class="mb-0 fw-bold text-primary-text"><i class="fas fa-eye me-2"></i> Privacy</h5>
                </div>
                <div class="card-body p-4">
                    <p class="text-secondary-text">Manage your communication preferences and data.</p>
                    <form asp-action="UpdatePreferences" method="post">

                        <div class="form-check mb-3">
                            <input class="form-check-input check-input-custom" type="checkbox" id="emailNotifications" checked>
                            <label class="form-check-label text-primary-text" for="emailNotifications">
                                Email notifications (Promotions/News)
                            </label>
                        </div>
                        <div class="form-check mb-4">
                            <input class="form-check-input check-input-custom" type="checkbox" id="orderUpdates" checked>
                            <label class="form-check-label text-primary-text" for="orderUpdates">
                                Essential order status updates
                            </label>
                        </div>
                        <button type="submit" class="btn btn-primary-accent">
                            <i class="fas fa-save me-1"></i> Save Preferences
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-12">
            <div class="card danger-zone-card shadow-lg">
                <div class="card-header bg-danger-custom text-white">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-exclamation-triangle me-2"></i> Danger Zone</h5>
                </div>
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center flex-column flex-sm-row">
                        <div class="mb-3 mb-sm-0">
                            <h6 class="fw-bold text-primary-text">Delete Account</h6>
                            <p class="text-secondary-text mb-0">Once you delete your account, there is no going back. Please be certain.</p>
                        </div>
                        <a asp-action="DeleteAccount" class="btn btn-danger-custom btn-lg">
                            Delete My Account
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>