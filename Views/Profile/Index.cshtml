@model BlogEcommerce.Models.ProfileViewModel

@{
    ViewData["Title"] = "My Profile";
}

<div class="container-xl py-5">

    @if (TempData["SuccessMessage"] != null)
    {
            <div class="alert alert-success-custom alert-dismissible fade show mb-4" role="alert">
                <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
    }

    <div class="row g-4">

        <div class="col-lg-3 col-md-4">

            <div class="card profile-sidebar-card shadow-lg mb-4">
                <div class="card-body text-center p-4">

                    <div class="profile-avatar-wrapper mb-3 mx-auto">
                        @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                        {
                                <img src="@Model.ProfilePictureUrl" class="rounded-circle profile-picture" alt="Profile Picture">
                        }
                        else
                        {
                                <div class="rounded-circle profile-initials-bg text-white d-flex align-items-center justify-content-center mx-auto" >
                                    <span class="profile-initials-text">@(Model.FullName?.FirstOrDefault().ToString().ToUpper() ?? Model.Email.FirstOrDefault().ToString().ToUpper())</span>
                                </div>
                        }
                    </div>

                    <h4 class="fw-bold text-primary-text">@(Model.FullName ?? "User")</h4>
                    <p class="text-secondary small">@Model.Email</p>
                    <p class="text-muted small mb-3">Member since @Model.MemberSince.ToString("MMM yyyy")</p>

                    <div class="d-grid gap-2">
                        <a asp-action="Edit" class="btn btn-primary-accent w-100">
                            <i class="fas fa-user-edit me-1"></i> Edit Profile
                        </a>
                        <a asp-action="ChangePassword" class="btn btn-outline-secondary w-100">
                            <i class="fas fa-lock me-1"></i> Change Password
                        </a>
                    </div>
                </div>
            </div>

            <div class="card quick-links-card shadow-sm">
                <div class="card-header bg-gray-light">
                    <h6 class="mb-0 fw-bold text-primary-text"><i class="fas fa-link me-2"></i> Quick Links</h6>
                </div>
                <div class="list-group list-group-flush list-group-monochrome">
                    <a asp-action="Orders" class="list-group-item list-group-item-action profile-link">
                        <i class="fas fa-box me-2 text-primary-accent"></i> My Orders
                    </a>
                    <a asp-action="Reviews" class="list-group-item list-group-item-action profile-link">
                        <i class="fas fa-star me-2 text-warning-accent"></i> My Reviews
                    </a>
                    <a asp-action="Comments" class="list-group-item list-group-item-action profile-link">
                        <i class="fas fa-comment me-2 text-info-accent"></i> My Comments
                    </a>
                    <a asp-action="Settings" class="list-group-item list-group-item-action profile-link">
                        <i class="fas fa-cog me-2 text-secondary-text"></i> Settings
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-9 col-md-8">

            <h1 class="page-title fw-bold mb-4">Dashboard Overview</h1>

            <div class="row mb-4 g-3">

                <div class="col-md-3">
                    <div class="card stat-card-profile bg-primary-accent text-white text-center">
                        <div class="card-body py-3">
                            <h2 class="fw-bold mb-1">@Model.TotalOrders</h2>
                            <p class="mb-0 small-title">Total Orders</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card stat-card-profile bg-success-accent text-white text-center">
                        <div class="card-body py-3">
                            <h2 class="fw-bold mb-1">$@Model.TotalSpent.ToString("N2")</h2>
                            <p class="mb-0 small-title">Total Spent</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card stat-card-profile bg-warning-custom text-dark text-center">
                        <div class="card-body py-3">
                            <h2 class="fw-bold mb-1">@Model.TotalReviews</h2>
                            <p class="mb-0 small-title">Reviews</p>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card stat-card-profile bg-info-accent text-white text-center">
                        <div class="card-body py-3">
                            <h2 class="fw-bold mb-1">@Model.TotalComments</h2>
                            <p class="mb-0 small-title">Comments</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card profile-info-card shadow-sm mb-4">
                <div class="card-header bg-gray-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0 fw-bold text-primary-text"><i class="fas fa-info-circle me-2"></i> Personal Information</h5>
                    <a asp-action="Edit" class="btn btn-sm btn-outline-dark-custom">Edit</a>
                </div>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-6 mb-3 border-end"><strong>Full Name:</strong> <p class="mb-0 text-primary-text">@(Model.FullName ?? "Not provided")</p></div>
                        <div class="col-md-6 mb-3"><strong>Email:</strong> <p class="mb-0 text-primary-text">@Model.Email</p></div>
                        <div class="col-md-6 mb-3 border-end"><strong>Phone:</strong> <p class="mb-0 text-primary-text">@(Model.PhoneNumber ?? "Not provided")</p></div>
                        <div class="col-md-6 mb-3"><strong>Date of Birth:</strong> <p class="mb-0 text-primary-text">@(Model.DateOfBirth?.ToString("MMM dd, yyyy") ?? "Not provided")</p></div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Bio))
                    {
                            <div class="mt-3 pt-3 border-top border-light-gray">
                                <strong>Bio:</strong>
                                <p class="mb-0 text-secondary-text">@Model.Bio</p>
                            </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Address))
                    {
                            <div class="mt-3 pt-3 border-top border-light-gray">
                                <strong>Address:</strong>
                                <address class="mb-0 text-secondary-text">
                                @Model.Address<br />
                                @Model.City, @Model.ZipCode, @Model.Country
                                </address>
                            </div>
                    }
                </div>
            </div>

            <div class="card recent-activity-card shadow-sm">
                <div class="card-header bg-custom-dark text-white">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-history me-2"></i> Quick Activity</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-3">
                        <a asp-action="Orders" class="btn btn-outline-primary-accent text-start fw-bold">
                            View My Orders (<span class="text-error-accent">@Model.TotalOrders</span>) <i class="fas fa-arrow-right float-end mt-1"></i>
                        </a>
                        <a asp-action="Reviews" class="btn btn-outline-dark-custom text-start">
                            View My Reviews (<span class="text-warning-accent">@Model.TotalReviews</span>) <i class="fas fa-arrow-right float-end mt-1"></i>
                        </a>
                        <a asp-action="Comments" class="btn btn-outline-dark-custom text-start">
                            View My Comments (<span class="text-info-accent">@Model.TotalComments</span>) <i class="fas fa-arrow-right float-end mt-1"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>