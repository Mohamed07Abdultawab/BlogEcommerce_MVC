@model BlogEcommerce.Models.Order

@{
    ViewData["Title"] = "Order Confirmed!";
}

<div class="container-xl py-5">

    <div class="text-center mb-5 confirmation-header">
        <div class="text-success-accent confirmation-icon mb-3">
            <i class="fas fa-check-circle fa-6x"></i>
        </div>

        <h1 class="page-title fw-bold display-4 text-success-accent">Order Confirmed!</h1>
        <p class="lead text-primary-text mt-3">Thank you for your order, <span class="fw-bold">@Model.CustomerName</span>.</p>
        <p class="fs-5 text-secondary">Your order number is: <span class="fw-bold text-primary-text">#@Model.Id</span></p>
    </div>

    <hr class="section-divider mb-5" />

    <div class="row">

        <div class="col-lg-6">

            <div class="card mb-4 info-card-monochrome shadow-sm">
                <div class="card-header bg-gray-light">
                    <h5 class="card-title mb-0 fw-bold text-primary-text"><i class="fas fa-info-circle me-2"></i> Order Details</h5>
                </div>
                <div class="card-body">
                    <p><strong>Order Date:</strong> @Model.OrderDate.ToString("MMMM dd, yyyy")</p>
                    <p><strong>Status:</strong> <span class="badge rounded-pill bg-gray-light text-primary">@Model.Status</span></p>
                    <p class="fs-5 mt-3"><strong>Total Paid:</strong> <span class="text-error-accent fw-bold">$@Model.TotalAmount.ToString("N2")</span></p>
                    <p class="small text-secondary">A confirmation email has been sent to @Model.Email.</p>
                </div>
            </div>

            <div class="card mb-4 info-card-monochrome shadow-sm">
                 <div class="card-header bg-gray-light">
                    <h5 class="card-title mb-0 fw-bold text-primary-text"><i class="fas fa-shipping-fast me-2"></i> Shipping Information</h5>
                </div>
                <div class="card-body">
                    <p><strong>Name:</strong> @Model.CustomerName</p>
                    <p><strong>Phone:</strong> @Model.Phone</p>
                    <p><strong>Method:</strong> <span class="fw-bold text-success-accent">Standard Shipping (Free)</span></p>
                    <p class="mt-3 mb-0"><strong>Delivery Address:</strong><br />
                        <span class="text-primary-text">@Model.Address, @Model.City, @Model.ZipCode</span>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-lg-6">

            <div class="card mb-4 info-card-monochrome shadow-sm h-100">
                <div class="card-header bg-gray-light">
                    <h5 class="card-title mb-0 fw-bold text-primary-text"><i class="fas fa-list me-2"></i> Ordered Items (@Model.OrderItems.Count())</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table align-middle order-items-table mb-0">
                            <thead>
                                <tr class="table-header-monochrome">
                                    <th>Product</th>
                                    <th>Qty</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                        <tr>
                                            <td class="item-name-col">
                                                <a href="#" class="text-primary-link fw-bold">@item.Product?.Name</a>
                                                <br /><small class="text-muted">$@item.Price.ToString("N2") each</small>
                                            </td>
                                            <td class="fw-bold">@item.Quantity</td>
                                            <td class="fw-bold">$@((item.Price * item.Quantity).ToString("N2"))</td>
                                        </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-footer-monochrome">
                                    <td colspan="2" class="text-end fw-bold">Grand Total:</td>
                                    <td class="fw-bold text-error-accent">$@Model.TotalAmount.ToString("N2")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-5 pt-3 border-top section-divider-light">

        <a asp-action="Invoice" asp-route-id="@Model.Id" target="_blank" class="btn btn-success-accent btn-lg px-4 me-3">
            <i class="fas fa-file-invoice-dollar me-2"></i> View/Print Invoice
        </a>

        <a asp-controller="Products" asp-action="Index" class="btn btn-primary-accent btn-lg px-4 me-3">
            <i class="fas fa-store me-2"></i> Continue Shopping
        </a>

        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
            <i class="fas fa-home me-2"></i> Go to Home
        </a>

    </div>
</div>