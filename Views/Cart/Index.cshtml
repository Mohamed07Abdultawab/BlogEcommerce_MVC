@model IEnumerable<BlogEcommerce.Models.CartItem>

@{
    ViewData["Title"] = "Shopping Cart";
    decimal total = 0;
}

<div class="container-xl py-5">

    @if (TempData["SuccessMessage"] != null)
    {
            <div class="alert alert-success-custom alert-dismissible fade show mb-4" role="alert">
                <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
            <div class="alert alert-danger-custom alert-dismissible fade show mb-4" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
    }

    <h1 class="page-title fw-bold mb-4">🛒 Your Shopping Cart</h1>
    <hr class="section-divider mb-5" />

    @if (Model.Any())
    {
            <div class="row">
                <div class="col-lg-8">
                    <div class="cart-items-table table-responsive">
                        <table class="table align-middle cart-table">
                            <thead>
                                <tr class="table-header-monochrome">
                                    <th class="w-50">Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Subtotal</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var item in Model)
                            {
                                var subtotal = item.Product!.Price * item.Quantity;
                                total += subtotal;

                                    <tr class="cart-item-row">
                                        <td>
                                            <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(item.Product.ImageUrl))
                                            {
                                                    <img src="@item.Product.ImageUrl" alt="@item.Product.Name" class="cart-item-img me-3">
                                            }
                                                <div>
                                                    <h6 class="fw-bold mb-1 text-primary-text">
                                                        <a asp-controller="Products" asp-action="Details" asp-route-id="@item.Product.Id" class="text-primary-link">@item.Product.Name</a>
                                                    </h6>
                                                    <small class="text-secondary">@item.Product.Category</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="item-price fw-bold">$@item.Product.Price.ToString("N2")</td>

                                        <td>
                                            <form asp-action="UpdateQuantity" method="post" class="d-inline update-qty-form">
                                            @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <div class="input-group input-group-sm quantity-control">
                                                    <button type="submit" name="quantity" value="@(item.Quantity - 1)" 
                                                            class="btn btn-outline-dark-custom btn-monochrome-qty" 
                                                @(item.Quantity == 1 ? "disabled" : "")>-</button>

                                                    <input type="number" class="form-control form-control-sm text-center cart-qty-input" 
                                                           value="@item.Quantity" readonly>

                                                    <button type="submit" name="quantity" value="@(item.Quantity + 1)" 
                                                            class="btn btn-outline-dark-custom btn-monochrome-qty">+</button>
                                                </div>
                                            </form>
                                        </td>

                                        <td class="item-subtotal fw-bold text-error-accent">$@subtotal.ToString("N2")</td>

                                        <td>
                                            <form asp-action="Remove" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-sm btn-danger-custom btn-remove-item" onclick="return confirm('Remove this item?')">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                            }
                            </tbody>
                        </table>
                    </div>

                    <div class="d-flex justify-content-end mt-4">
                         <a asp-action="Clear" class="btn btn-outline-dark-custom btn-lg">
                            <i class="fas fa-times-circle me-2"></i> Clear Cart
                        </a>
                    </div>

                </div>

                <div class="col-lg-4">
                    <div class="card order-summary-card shadow-sm sticky-top">
                        <div class="card-body p-4">
                            <h5 class="card-title fw-bold order-summary-title">Order Summary</h5>
                            <hr class="summary-divider" />

                            <div class="d-flex justify-content-between mb-2 summary-row">
                                <span>Subtotal:</span>
                                <span class="fw-bold">$@total.ToString("N2")</span>
                            </div>
                            <div class="d-flex justify-content-between mb-2 summary-row">
                                <span>Shipping:</span>
                                <span class="fw-bold text-success-accent">Free</span>
                            </div>
                            <hr class="summary-divider" />
                            <div class="d-flex justify-content-between mb-4 total-row">
                                <strong class="fs-5">Grand Total:</strong>
                                <strong class="fs-4 text-error-accent">$@total.ToString("N2")</strong>
                            </div>

                            <a asp-action="Checkout" class="btn btn-success-accent btn-lg w-100 mb-3 checkout-btn">
                                <i class="fas fa-credit-card me-2"></i> Proceed to Checkout
                            </a>
                            <a asp-controller="Products" asp-action="Index" class="btn btn-outline-secondary w-100 continue-shopping-btn">
                                <i class="fas fa-store me-2"></i> Continue Shopping
                            </a>
                        </div>
                    </div>
                </div>
            </div>
    }
    else
    {
            <div class="text-center py-6 empty-cart-message">
                <i class="fas fa-shopping-cart fa-5x text-secondary-text mb-4"></i>
                <h3 class="fw-bold">Your cart is empty</h3>
                <p class="text-secondary fs-5 mb-4">Start adding some products to begin your purchase.</p>
                <a asp-controller="Products" asp-action="Index" class="btn btn-primary-accent btn-lg">
                    <i class="fas fa-store me-2"></i> Browse Products
                </a>
            </div>
    }
</div>