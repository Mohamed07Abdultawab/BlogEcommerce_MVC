@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<BlogEcommerce.Models.Product>

@{
    ViewData["Title"] = "Our Products";
}

<div class="container-xl py-5">

    <div class="d-flex justify-content-between align-items-center mb-5 border-bottom pb-3">
        <h1 class="page-title fw-bold">🛍️ Explore Our Collection</h1>
        @if (User.IsInRole("Admin"))
        {
                <a asp-action="Create" class="btn btn-success-accent btn-lg">
                    <i class="fas fa-plus-circle me-2"></i> Add New Product
                </a>
        }
    </div>

    <div class="search-filter-card mb-5">
        <div class="card-body p-4">
            <form asp-action="Index" method="get">
                <div class="row g-3 align-items-center">
                    <div class="col-md-5 col-lg-6">
                        <div class="input-group">
                            <input type="text" name="searchString" class="form-control filter-input form-control-custom" placeholder="Search products by name or keyword..." value="@ViewBag.CurrentSearch">
                            <button type="submit" class="btn btn-primary-accent search-button">
                                <i class="fas fa-search"></i> Search
                            </button>
                        </div>
                    </div>
                    <div class="col-md-5 col-lg-4">
                        <select name="category" class="form-select filter-select form-select-custom">
                            <option value="">All Categories</option>
                            @if (ViewBag.Categories != null)
                            {
                                @foreach (var cat in (List<string>)ViewBag.Categories)
                                {
                                            <option value="@cat" selected="@(ViewBag.CurrentCategory == cat)">@cat</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2 col-lg-2">
                        <a asp-action="Index" class="btn btn-outline-secondary w-100">
                            <i class="fas fa-undo"></i> Clear
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <p class="text-secondary mb-4 fs-6">
        <span class="fw-bold">@Model.Count</span> of <span class="fw-bold">@Model.TotalItemCount</span> products found.
    </p>

    <div class="row">
        @foreach (var item in Model)
        {
                <div class="col-md-6 col-lg-4 mb-5">
                    <div class="product-card-full card h-100 shadow-sm">
                        <div class="product-image-wrapper">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                                    <img src="@item.ImageUrl" class="card-img-top product-post-img" alt="@item.Name" onerror="this.onerror=null; this.src='https://via.placeholder.com/600x400/F4F4F4/333?text=Product';" >
                        }
                        else
                        {
                                    <img src="https://via.placeholder.com/600x400/F4F4F4/333?text=No+Image" class="card-img-top product-post-img" alt="No image">
                        }
                        </div>
                        <div class="card-body d-flex flex-column p-4">
                            <h5 class="card-title product-title fw-bold mb-2">@item.Name</h5>

                            <p class="card-text text-secondary product-excerpt-text mb-3">
                            @item.Description.Substring(0, Math.Min(100, item.Description.Length))...
                            </p>

                        @if (!string.IsNullOrEmpty(item.Category))
                        {
                                    <span class="badge rounded-pill bg-gray-light text-primary mb-3 align-self-start">@item.Category</span>
                        }

                            <div class="mt-auto pt-3 border-top border-light-gray">
                                <h4 class="product-price-accent fw-bolder mb-2">$@item.Price.ToString("N2")</h4>

                                <p class="text-muted mb-2 small">
                                @if (item.Stock > 0)
                                {
                                            <span class="text-success-accent fw-bold"><i class="fas fa-check-circle me-1"></i> In Stock: @item.Stock</span>
                                }
                                else
                                {
                                            <span class="text-danger-accent fw-bold"><i class="fas fa-times-circle me-1"></i> Out of Stock</span>
                                }
                                </p>

                                <div class="d-flex gap-2 mt-3">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary-accent btn-sm flex-fill">
                                        <i class="fas fa-info-circle me-1"></i> View Details
                                    </a>
                                @if (User.IsInRole("Admin"))
                                {
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning-custom btn-sm"><i class="fas fa-edit"></i></a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger-custom btn-sm"><i class="fas fa-trash-alt"></i></a>
                                }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        }
    </div>

    @if (!Model.Any())
    {
            <div class="alert alert-info-custom text-center py-4 my-5">
                <h4 class="alert-heading text-primary-text fw-bold">No products found</h4>
                <p>Try adjusting your search or filter criteria.</p>
                <a asp-action="Index" class="btn btn-primary-accent mt-3">View All Products</a>
            </div>
    }

    @if (Model.PageCount > 1)
    {
            <nav aria-label="Product pagination" class="my-5">
                <ul class="pagination justify-content-center pagination-custom">
                @if (Model.HasPreviousPage)
                {
                            <li class="page-item-custom">
                                <a class="page-link-custom" asp-action="Index" asp-route-page="@(Model.PageNumber - 1)" asp-route-searchString="@ViewBag.CurrentSearch" asp-route-category="@ViewBag.CurrentCategory"><i class="fas fa-angle-left"></i></a>
                            </li>
                }

                @for (int i = 1; i <= Model.PageCount; i++)
                {
                            <li class="page-item-custom @(i == Model.PageNumber ? "active" : "")">
                                <a class="page-link-custom" asp-action="Index" asp-route-page="@i" asp-route-searchString="@ViewBag.CurrentSearch" asp-route-category="@ViewBag.CurrentCategory">@i</a>
                            </li>
                }

                @if (Model.HasNextPage)
                {
                            <li class="page-item-custom">
                                <a class="page-link-custom" asp-action="Index" asp-route-page="@(Model.PageNumber + 1)" asp-route-searchString="@ViewBag.CurrentSearch" asp-route-category="@ViewBag.CurrentCategory"><i class="fas fa-angle-right"></i></a>
                            </li>
                }
                </ul>
            </nav>
    }
</div>