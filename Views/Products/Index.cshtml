@model IEnumerable<BlogEcommerce.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Our Products</h1>
        <a asp-action="Create" class="btn btn-success">Add New Product</a>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                                <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 250px; object-fit: cover;">
                    }
                    else
                    {
                                <img src="https://via.placeholder.com/300x250?text=No+Image" class="card-img-top" alt="No image">
                    }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description.Substring(0, Math.Min(100, item.Description.Length))...</p>
                        @if (!string.IsNullOrEmpty(item.Category))
                        {
                                    <span class="badge bg-info mb-2">@item.Category</span>
                        }
                            <div class="mt-auto">
                                <h4 class="text-primary">$@item.Price.ToString("N2")</h4>
                                <p class="text-muted mb-2">
                                    <small>Stock: @item.Stock items</small>
                                </p>
                                <div class="d-flex gap-2">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm flex-fill">View Details</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        }
    </div>

    @if (!Model.Any())
    {
            <div class="alert alert-info">
                <h4>No products available</h4>
                <p>Start by adding your first product!</p>
                <a asp-action="Create" class="btn btn-primary">Add Product</a>
            </div>
    }
</div>