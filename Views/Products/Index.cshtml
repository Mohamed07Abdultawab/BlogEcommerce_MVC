@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<BlogEcommerce.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Our Products</h1>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success">Add New Product</a>
        }
    </div>

    <!-- Search and Filter Section -->
    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row">
                    <div class="col-md-6">
                        <div class="input-group">
                            <input type="text" name="searchString" class="form-control" placeholder="Search products..." value="@ViewBag.CurrentSearch">
                            <button type="submit" class="btn btn-primary">Search</button>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <select name="category" class="form-select">
                            <option value="">All Categories</option>
                            @if (ViewBag.Categories != null)
                            {
                                @foreach (var cat in (List<string>)ViewBag.Categories)
                                {
                                    <option value="@cat" selected="@(ViewBag.CurrentCategory == cat)">@cat</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="col-md-2">
                        <a asp-action="Index" class="btn btn-secondary w-100">Clear</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results Count -->
    <p class="text-muted">Showing @Model.Count of @Model.TotalItemCount products</p>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                    {
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name" style="height: 250px; object-fit: cover;">
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/300x250?text=No+Image" class="card-img-top" alt="No image">
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">@item.Description.Substring(0, Math.Min(100, item.Description.Length))...</p>
                        @if (!string.IsNullOrEmpty(item.Category))
                        {
                            <span class="badge bg-info mb-2">@item.Category</span>
                        }
                        <div class="mt-auto">
                            <h4 class="text-primary">$@item.Price.ToString("N2")</h4>
                            <p class="text-muted mb-2">
                                <small>Stock: @item.Stock items</small>
                            </p>
                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm flex-fill">View Details</a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <h4>No products found</h4>
            <p>Try adjusting your search or filter criteria.</p>
            <a asp-action="Index" class="btn btn-primary">View All Products</a>
        </div>
    }

    <!-- Pagination -->
    @if (Model.PageCount > 1)
    {
        <nav aria-label="Product pagination">
            <ul class="pagination justify-content-center">
                @if (Model.HasPreviousPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber - 1)" asp-route-searchString="@ViewBag.CurrentSearch" asp-route-category="@ViewBag.CurrentCategory">Previous</a>
                    </li>
                }

                @for (int i = 1; i <= Model.PageCount; i++)
                {
                    <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i" asp-route-searchString="@ViewBag.CurrentSearch" asp-route-category="@ViewBag.CurrentCategory">@i</a>
                    </li>
                }

                @if (Model.HasNextPage)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.PageNumber + 1)" asp-route-searchString="@ViewBag.CurrentSearch" asp-route-category="@ViewBag.CurrentCategory">Next</a>
                    </li>
                }
            </ul>
        </nav>
    }
</div>