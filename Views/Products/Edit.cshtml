@model BlogEcommerce.Models.Product

@{
    ViewData["Title"] = "Edit Product";
    var accentColorClass = "btn-primary-accent"; // استخدام اللون الأزرق لـ Save
}

<div class="container-xl py-5">

    <h1 class="page-title fw-bold mb-3">✏️ Edit Product: @Model.Name</h1>

    <hr class="section-divider mb-5" />
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card p-4 form-card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger-custom text-danger-accent mb-4 p-2"></div>

                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-4">
                            <label asp-for="Name" class="form-label control-label fw-bold">Name</label>
                            <input asp-for="Name" class="form-control form-control-custom" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Description" class="form-label control-label fw-bold">Description</label>
                            <textarea asp-for="Description" class="form-control form-control-custom" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Price" class="form-label control-label fw-bold">Price ($)</label>
                            <input asp-for="Price" class="form-control form-control-custom" type="number" step="0.01" />
                            <span asp-validation-for="Price" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="ImageUrl" class="form-label control-label fw-bold">Image URL</label>
                            <input asp-for="ImageUrl" class="form-control form-control-custom" />
                            <span asp-validation-for="ImageUrl" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Category" class="form-label control-label fw-bold">Category</label>
                            <input asp-for="Category" class="form-control form-control-custom" />
                            <span asp-validation-for="Category" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-5">
                            <label asp-for="Stock" class="form-label control-label fw-bold">Stock Quantity</label>
                            <input asp-for="Stock" class="form-control form-control-custom" type="number" />
                            <span asp-validation-for="Stock" class="text-danger small"></span>
                        </div>

                        <div class="form-group d-flex justify-content-start gap-3">
                            <button type="submit" class="btn @accentColorClass btn-lg px-4">
                                <i class="fas fa-save me-2"></i> Save Changes
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                                <i class="fas fa-arrow-left me-2"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}