@model BlogEcommerce.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container-xl py-5">

    <h1 class="page-title fw-bold mb-3 text-danger-accent">
        <i class="fas fa-exclamation-triangle me-2"></i> Delete Product
    </h1>

    <h3 class="text-secondary fw-normal mb-5">
        Are you sure you want to permanently delete the product **@Model.Name**? This action cannot be undone.
    </h3>

    <hr class="section-divider mb-5" />

    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card p-4 delete-details-card shadow-lg mb-5">
                <div class="card-body">
                    <h5 class="card-title fw-bold text-primary-text mb-4">Product Details</h5>

                    <dl class="row post-details-list">
                        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Name)</dt>
                        <dd class="col-sm-9 text-primary-text">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Price)</dt>
                        <dd class="col-sm-9 text-danger-accent fw-bold">$@Html.DisplayFor(model => model.Price)</dd>

                        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Category)</dt>
                        <dd class="col-sm-9 text-secondary">
                            <span class="badge rounded-pill bg-gray-light text-primary">@Html.DisplayFor(model => model.Category)</span>
                        </dd>

                        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Stock)</dt>
                        <dd class="col-sm-9 text-secondary">@Html.DisplayFor(model => model.Stock) items</dd>

                        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.Description)</dt>
                        <dd class="col-sm-9 text-secondary">@Html.DisplayFor(model => model.Description)</dd>

                        <dt class="col-sm-3 fw-bold">@Html.DisplayNameFor(model => model.ImageUrl)</dt>
                        <dd class="col-sm-9 text-secondary small">@Html.DisplayFor(model => model.ImageUrl)</dd>
                    </dl>
                </div>
            </div>

            <div class="text-center">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger-custom btn-lg px-4 me-3">
                        <i class="fas fa-trash-alt me-2"></i> Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">
                        <i class="fas fa-times me-2"></i> Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>