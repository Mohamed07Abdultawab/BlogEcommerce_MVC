@model IEnumerable<BlogEcommerce.Models.Order>

@{
    ViewData["Title"] = "All Orders";
}

<div class="container-fluid mt-4">
    <h1>All Orders</h1>
    <hr />

    <div class="card">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Order #</th>
                        <th>Customer Name</th>
                        <th>Email</th>
                        <th>Order Date</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                            <tr>
                                <td>#@order.Id</td>
                                <td>@order.CustomerName</td>
                                <td>@order.Email</td>
                                <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                <td>$@order.TotalAmount.ToString("N2")</td>
                                <td>
                                    <span class="badge bg-@(order.Status == "Pending" ? "warning" : order.Status == "Completed" ? "success" : order.Status == "Shipped" ? "info" : "secondary")">
                                    @order.Status
                                    </span>
                                </td>
                                <td>
                                    <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-sm btn-primary">View Details</a>
                                </td>
                            </tr>
                    }
                </tbody>
            </table>

            @if (!Model.Any())
            {
                    <p class="text-center text-muted py-4">No orders yet.</p>
            }
        </div>
    </div>
</div>