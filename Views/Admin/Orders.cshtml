@model IEnumerable<BlogEcommerce.Models.Order>

@{
    ViewData["Title"] = "Manage Orders";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Order Management</h1>
        <form asp-action="UpdateAllOrderStatuses" method="post" class="d-inline">
            <button type="submit" class="btn btn-info">
                🔄 Update Order Statuses
            </button>
        </form>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <!-- Rest of your existing code... -->


    <!-- Status Filter -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="btn-group" role="group">
                <a asp-action="Orders" class="btn @(string.IsNullOrEmpty(ViewBag.CurrentStatus) ? "btn-primary" : "btn-outline-primary")">
                    All Orders (@Model.Count())
                </a>
                <a asp-action="Orders" asp-route-status="Pending" class="btn @(ViewBag.CurrentStatus == "Pending" ? "btn-warning" : "btn-outline-warning")">
                    Pending (@Model.Count(o => o.Status == "Pending"))
                </a>
                <a asp-action="Orders" asp-route-status="Processing" class="btn @(ViewBag.CurrentStatus == "Processing" ? "btn-info" : "btn-outline-info")">
                    Processing (@Model.Count(o => o.Status == "Processing"))
                </a>
                <a asp-action="Orders" asp-route-status="Shipped" class="btn @(ViewBag.CurrentStatus == "Shipped" ? "btn-primary" : "btn-outline-primary")">
                    Shipped (@Model.Count(o => o.Status == "Shipped"))
                </a>
                <a asp-action="Orders" asp-route-status="Completed" class="btn @(ViewBag.CurrentStatus == "Completed" ? "btn-success" : "btn-outline-success")">
                    Completed (@Model.Count(o => o.Status == "Completed"))
                </a>
                <a asp-action="Orders" asp-route-status="Cancelled" class="btn @(ViewBag.CurrentStatus == "Cancelled" ? "btn-danger" : "btn-outline-danger")">
                    Cancelled (@Model.Count(o => o.Status == "Cancelled"))
                </a>
            </div>
        </div>
    </div>

    <!-- Orders Table -->
    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Order #</th>
                                    <th>Customer Name</th>
                                    <th>Email</th>
                                    <th>Phone</th>
                                    <th>Order Date</th>
                                    <th>Items</th>
                                    <th>Total Amount</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            @foreach (var order in Model)
                            {
                                        <tr>
                                            <td><strong>#@order.Id</strong></td>
                                            <td>@order.CustomerName</td>
                                            <td>@order.Email</td>
                                            <td>@order.Phone</td>
                                            <td>@order.OrderDate.ToString("MMM dd, yyyy HH:mm")</td>
                                            <td>@order.OrderItems.Count items</td>
                                            <td><strong>$@order.TotalAmount.ToString("N2")</strong></td>
                                            <td>
                                                <span class="badge bg-@(order.Status == "Pending" ? "warning" : order.Status == "Completed" ? "success" : order.Status == "Shipped" ? "info" : order.Status == "Processing" ? "primary" : "secondary")">
                                            @order.Status
                                                </span>
                                            </td>
                                            <td>
                                                <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-sm btn-primary">
                                                    View Details
                                                </a>
                                            </td>
                                        </tr>
                            }
                            </tbody>
                        </table>
                    </div>
            }
            else
            {
                    <div class="text-center py-5">
                        <h4>No orders found</h4>
                        <p class="text-muted">
                        @if (!string.IsNullOrEmpty(ViewBag.CurrentStatus))
                        {
                            <text>No orders with status "@ViewBag.CurrentStatus"</text>
                        }
                        else
                        {
                            <text>No orders have been placed yet.</text>
                        }
                        </p>
                    </div>
            }
        </div>
    </div>
</div>