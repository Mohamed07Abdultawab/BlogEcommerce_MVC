@model BlogEcommerce.Models.Order

@{
    ViewData["Title"] = $"Order #{Model.Id} Details";
    // دالة مساعدة للحصول على لون Badge بناءً على الحالة
    string GetStatusClass(string status) => status switch
    {
        "Pending" => "bg-warning-custom text-dark",
        "Processing" => "bg-primary-accent",
        "Shipped" => "bg-info-accent",
        "Completed" => "bg-success-accent",
        "Cancelled" => "bg-danger-custom",
        _ => "bg-secondary-monochrome"
    };
}

<div class="container-xl py-5">

    <div class="d-flex justify-content-between align-items-center mb-5 border-bottom pb-3">
        <h1 class="page-title fw-bold">Order #@Model.Id Details</h1>
        <a asp-action="Orders" class="btn btn-outline-secondary btn-lg">
            <i class="fas fa-arrow-left me-2"></i> Back to Orders
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
            <div class="alert alert-success-custom alert-dismissible fade show mb-4" role="alert">
                <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
    }

    <div class="row g-4">

        <div class="col-lg-8">
            <div class="card order-items-card shadow-sm mb-4">
                <div class="card-header bg-gray-light">
                    <h5 class="mb-0 fw-bold text-primary-text"><i class="fas fa-list-alt me-2"></i> Order Items</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-monochrome mb-0">
                            <thead>
                                <tr class="table-header-monochrome">
                                    <th>Product</th>
                                    <th>Price</th>
                                    <th>Quantity</th>
                                    <th>Subtotal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderItems)
                                {
                                        <tr>
                                            <td>
                                                <strong class="text-primary-link">@item.Product?.Name</strong>
                                            @if (!string.IsNullOrEmpty(item.Product?.Category))
                                            {
                                                        <br />
                                                        <small class="text-secondary">@item.Product.Category</small>
                                            }
                                            </td>
                                            <td>$@item.Price.ToString("N2")</td>
                                            <td>@item.Quantity</td>
                                            <td><strong class="text-error-accent">$@((item.Price * item.Quantity).ToString("N2"))</strong></td>
                                        </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr class="table-footer-monochrome">
                                    <td colspan="3" class="text-end fw-bold">Grand Total:</td>
                                    <td><strong class="text-error-accent fs-5">$@Model.TotalAmount.ToString("N2")</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">

            <div class="card order-status-card mb-4 shadow-sm">
                <div class="card-header bg-gray-light">
                    <h5 class="mb-0 fw-bold text-primary-text"><i class="fas fa-tasks me-2"></i> Manage Status</h5>
                </div>
                <div class="card-body">
                    <p class="mb-3">
                        <strong class="small">Order Date:</strong><br />
                        <span class="fw-bold">@Model.OrderDate.ToString("MMMM dd, yyyy HH:mm")</span>
                    </p>

                    <p class="mb-3">
                        <strong class="small">Current Status:</strong><br />
                        <span class="badge rounded-pill @GetStatusClass(Model.Status) fs-6 text-white">
                            @Model.Status
                        </span>
                    </p>

                    <hr class="section-divider-light" />

                    <form asp-action="UpdateOrderStatus" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.Id" />
                        <div class="mb-3">
                            <label class="form-label fw-bold small">Update Status:</label>
                            <select name="status" class="form-select form-select-custom" required>
                                @foreach (var status in new[] { "Pending", "Processing", "Shipped", "Completed", "Cancelled" })
                                {
                                        <option value="@status" selected="@(Model.Status == status)">@status</option>
                                }
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary-accent w-100">
                            Update Status
                        </button>
                    </form>
                </div>
            </div>

            <div class="card order-info-card mb-4 shadow-sm">
                 <div class="card-header bg-custom-dark text-white">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-user me-2"></i> Customer Details</h5>
                </div>
                <div class="card-body">
                    <p class="mb-2"><strong>Name:</strong><br />@Model.CustomerName</p>
                    <p class="mb-2"><strong>Email:</strong><br /><a href="mailto:@Model.Email" class="text-accent-blue">@Model.Email</a></p>
                    <p class="mb-0"><strong>Phone:</strong><br />@Model.Phone</p>
                </div>
                <div class="card-header bg-gray-light border-top border-light-gray">
                    <h5 class="mb-0 fw-bold text-primary-text"><i class="fas fa-truck me-2"></i> Shipping Address</h5>
                </div>
                <div class="card-body">
                    <address class="mb-0 text-primary-text">
                        @Model.Address<br />
                        @Model.City, @Model.ZipCode
                    </address>
                </div>
            </div>

            <div class="card order-summary-card shadow-sm">
                <div class="card-header bg-success-accent text-white">
                    <h5 class="mb-0 fw-bold"><i class="fas fa-dollar-sign me-2"></i> Payment Summary</h5>
                </div>
                <div class="card-body">
                    <p class="mb-2">
                        <strong>Subtotal:</strong>
                        <span class="float-end">$@Model.TotalAmount.ToString("N2")</span>
                    </p>
                    <p class="mb-2">
                        <strong>Shipping:</strong>
                        <span class="float-end text-success-accent fw-bold">Free</span>
                    </p>
                    <hr />
                    <p class="mb-0">
                        <strong class="fs-5">Total:</strong>
                        <strong class="float-end fs-5 text-error-accent">$@Model.TotalAmount.ToString("N2")</strong>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>