@model BlogEcommerce.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container-xl py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">

            <div class="card login-card shadow-lg p-4">
                <div class="card-body p-4 p-md-5">

                    <h2 class="card-title text-center fw-bold mb-4 text-primary-text">
                        <i class="fas fa-sign-in-alt me-2 text-accent-blue"></i> Welcome Back
                    </h2>

                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger-custom text-danger-accent mb-4 p-2 small"></div>

                        <div class="form-group mb-4">
                            <label asp-for="Email" class="form-label fw-bold small">Email Address</label>
                            <input asp-for="Email" class="form-control form-control-custom" placeholder="you@example.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Password" class="form-label fw-bold small">Password</label>
                            <input asp-for="Password" class="form-control form-control-custom" type="password" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input asp-for="RememberMe" class="form-check-input check-input-custom" />
                                <label asp-for="RememberMe" class="form-check-label small text-secondary">Remember me</label>
                            </div>
                            <a href="#" class="text-accent-blue small fw-bold">Forgot Password?</a>
                        </div>

                        <div class="d-grid gap-2 mb-4">
                            <button type="submit" class="btn btn-primary-accent btn-lg login-btn">
                                <i class="fas fa-sign-in-alt me-2"></i> Log In
                            </button>
                        </div>

                        <div class="text-center mt-3">
                            <p class="text-secondary mb-0">Don't have an account? 
                                <a asp-action="Register" class="text-accent-blue fw-bold register-link">Register here</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}