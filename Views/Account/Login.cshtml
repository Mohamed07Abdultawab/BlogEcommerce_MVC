@model BlogEcommerce.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container-xl py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">

            <div class="card login-card shadow-lg">
                <div class="card-body p-4 p-md-5">

                    <div class="text-center mb-4">
                        <div class="mb-3">
                            <i class="fas fa-sign-in-alt fa-4x text-accent-blue"></i>
                        </div>
                        <h2 class="card-title fw-bold mb-2 text-primary-text">Welcome Back</h2>
                        <p class="text-secondary">Login to your account</p>
                    </div>

                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger-custom text-danger-accent mb-4 p-2 small"></div>

                        <div class="form-group mb-4">
                            <label asp-for="Email" class="form-label fw-bold small">
                                <i class="fas fa-envelope me-1"></i> Email Address
                            </label>
                            <input asp-for="Email" class="form-control form-control-lg form-control-custom" placeholder="Enter your email" autofocus />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Password" class="form-label fw-bold small">
                                <i class="fas fa-lock me-1"></i> Password
                            </label>
                            <div class="input-group"> 
                                <input asp-for="Password" id="Password" class="form-control form-control-lg form-control-custom" type="password" placeholder="Enter your password" />
                                <button class="btn btn-outline-secondary" type="button" onclick="togglePasswordVisibility('Password')" aria-label="Toggle Password Visibility">
                                    <i class="fas fa-eye" id="PasswordToggleIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div class="form-check">
                                <input asp-for="RememberMe" class="form-check-input check-input-custom" />
                                <label asp-for="RememberMe" class="form-check-label small text-secondary">
                                    Remember me
                                </label>
                            </div>
                            <a asp-action="ForgotPassword" class="text-accent-blue small fw-bold text-decoration-none">
                                Forgot your password?
                            </a>
                        </div>

                        <div class="d-grid gap-2 mb-4">
                            <button type="submit" class="btn btn-primary-accent btn-lg login-btn">
                                <i class="fas fa-sign-in-alt me-2"></i> Log In
                            </button>
                        </div>

                        <hr class="section-divider-light">

                        <div class="text-center mt-3">
                            <p class="text-secondary mb-0">Don't have an account? 
                                <a asp-action="Register" class="text-accent-blue fw-bold text-decoration-none register-link">
                                    Register here
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}