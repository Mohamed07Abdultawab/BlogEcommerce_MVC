@* Access Denied Page (403 Forbidden) *@
@{
    ViewData["Title"] = "Access Denied";
}

<div class="container-xl py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 text-center py-5">

            <div class="text-danger-accent mb-4">
                <i class="fas fa-user-lock fa-8x warning-icon-large"></i>
            </div>

            <h1 class="page-title fw-bold display-3 mb-3 text-danger-accent">
                Access Denied
            </h1>

            <p class="lead text-secondary mb-4 fs-4">
                You do not have the required permissions to view this page.
            </p>

            <p class="text-secondary mb-5">
                If you believe this is an error, please contact the administrator.
            </p>

            <a asp-controller="Home" asp-action="Index" class="btn btn-primary-accent btn-lg px-5">
                <i class="fas fa-home me-2"></i> Go to Home
            </a>

        </div>
    </div>
</div>