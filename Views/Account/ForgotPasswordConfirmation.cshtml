@* Password Reset Confirmation Page *@
@{
    ViewData["Title"] = "Password Reset Link Sent";
}

<div class="container-xl py-5">
    <div class="row justify-content-center">
        <div class="col-lg-7 col-md-8">

            <div class="card login-card shadow-lg">
                <div class="card-body p-4 p-md-5 text-center">

                    <div class="mb-4">
                        <i class="fas fa-check-circle fa-5x text-success-accent"></i>
                    </div>

                    <h2 class="mb-3 fw-bold text-primary-text">Check Your Email</h2>
                    <p class="lead text-secondary-text mb-4">
                        If an account exists with the email you provided, you will receive a password reset link shortly.
                    </p>

                    @if (TempData["ResetLink"] != null)
                    {
                            <div class="alert alert-warning-custom-light mb-4 text-start">
                                <h5 class="fw-bold text-dark-link small mb-2"><i class="fas fa-exclamation-triangle me-1"></i> Development Link:</h5>
                                <p class="mb-2 small">In production, this link would be sent to your email. For testing purposes, use this link:</p>
                                <div class="input-group mb-2">
                                    <input type="text" class="form-control form-control-custom small" id="resetLink" value="@TempData["ResetLink"]" readonly>
                                    <button class="btn btn-outline-dark-custom btn-sm" type="button" onclick="copyLink()">
                                        <i class="fas fa-copy"></i> Copy
                                    </button>
                                </div>
                                <small class="text-muted">Copy the link above to reset the password.</small>
                            </div>
                    }

                    <div class="alert alert-info-custom mb-5 small">
                        <i class="fas fa-info-circle me-1"></i> 
                        Didn't receive an email? Check your spam folder or wait a few minutes.
                    </div>

                    <div class="d-grid gap-3">
                        <a asp-action="Login" class="btn btn-primary-accent btn-lg login-btn">
                            <i class="fas fa-sign-in-alt me-2"></i> Back to Login
                        </a>
                        <a asp-action="ForgotPassword" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-redo me-2"></i> Try Again
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <script>
            function copyLink() {
                var copyText = document.getElementById("resetLink");
                copyText.select();
                copyText.setSelectionRange(0, 99999);
                navigator.clipboard.writeText(copyText.value);

                // يمكن استبدال alert برسالة تأكيد أجمل
                alert("Reset link copied to clipboard!");
            }
        </script>
}