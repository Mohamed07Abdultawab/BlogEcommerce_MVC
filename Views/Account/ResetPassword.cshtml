@model BlogEcommerce.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<div class="container-xl py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">

            <div class="card login-card shadow-lg">
                <div class="card-body p-4 p-md-5">

                    <div class="text-center mb-4">
                        <div class="mb-3">
                            <i class="fas fa-lock-open fa-4x text-accent-blue"></i>
                        </div>
                        <h2 class="card-title fw-bold mb-2 text-primary-text">Reset Password</h2>
                        <p class="text-secondary">Enter your new password</p>
                    </div>

                    <form asp-action="ResetPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger-custom text-danger-accent mb-4 p-2 small"></div>

                        <input asp-for="Code" type="hidden" />
                        <input asp-for="Email" type="hidden" />

                        <div class="form-group mb-4">
                            <label asp-for="Password" class="form-label fw-bold small">
                                <i class="fas fa-key me-1"></i> New Password
                            </label>
                            <input asp-for="Password" class="form-control form-control-lg form-control-custom" type="password" placeholder="Enter new password" autofocus />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                            <small class="text-muted">
                                Minimum 6 characters, must contain uppercase, lowercase, and digit
                            </small>
                        </div>

                        <div class="form-group mb-5">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold small">
                                <i class="fas fa-check-double me-1"></i> Confirm Password
                            </label>
                            <input asp-for="ConfirmPassword" class="form-control form-control-lg form-control-custom" type="password" placeholder="Confirm new password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 mb-4">
                            <button type="submit" class="btn btn-primary-accent btn-lg login-btn">
                                <i class="fas fa-check me-2"></i> Reset Password
                            </button>
                        </div>

                        <div class="text-center">
                            <a asp-action="Login" class="text-secondary text-decoration-none fw-bold">
                                <i class="fas fa-arrow-left me-1"></i> Back to Login
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}