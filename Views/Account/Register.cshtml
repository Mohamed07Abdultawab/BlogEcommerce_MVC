@model BlogEcommerce.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container-xl py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">

            <div class="card login-card shadow-lg p-4">
                <div class="card-body p-4 p-md-5">

                    <h2 class="card-title text-center fw-bold mb-4 text-primary-text">
                        <i class="fas fa-user-plus me-2 text-accent-blue"></i> Create Account
                    </h2>

                    <form asp-action="Register" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger-custom text-danger-accent mb-4 p-2 small"></div>

                        <div class="form-group mb-4">
                            <label asp-for="Email" class="form-label fw-bold small">Email Address</label>
                            <input asp-for="Email" class="form-control form-control-custom" placeholder="you@example.com" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Password" class="form-label fw-bold small">Password</label>
                            <input asp-for="Password" class="form-control form-control-custom" type="password" placeholder="Choose a strong password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="form-group mb-5">
                            <label asp-for="ConfirmPassword" class="form-label fw-bold small">Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control form-control-custom" type="password" placeholder="Confirm your password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 mb-4">
                            <button type="submit" class="btn btn-primary-accent btn-lg login-btn">
                                <i class="fas fa-user-plus me-2"></i> Register Account
                            </button>
                        </div>

                        <div class="text-center mt-3">
                            <p class="text-secondary mb-0">Already have an account? 
                                <a asp-action="Login" class="text-accent-blue fw-bold register-link">Login here</a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}