@* Password Reset Successful Page *@
@{
    ViewData["Title"] = "Password Reset Successful";
}

<div class="container-xl py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-7">

            <div class="card login-card shadow-lg">
                <div class="card-body p-4 p-md-5 text-center">

                    <div class="mb-4">
                        <i class="fas fa-check-circle fa-5x text-success-accent"></i>
                    </div>

                    <h2 class="mb-3 fw-bold text-primary-text">Password Reset Successful!</h2>
                    <p class="lead text-secondary-text mb-4">
                        Your password has been reset successfully. You can now login with your new password.
                    </p>

                    <div class="alert alert-success-custom mb-5">
                        <i class="fas fa-thumbs-up me-2"></i> 
                        Your account is now secure with the new password.
                    </div>

                    <div class="d-grid gap-2">
                        <a asp-action="Login" class="btn btn-primary-accent btn-lg login-btn">
                            <i class="fas fa-sign-in-alt me-2"></i> Login Now
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>