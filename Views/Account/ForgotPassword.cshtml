@model BlogEcommerce.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container-xl py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">

            <div class="card login-card shadow-lg">
                <div class="card-body p-4 p-md-5">

                    <div class="text-center mb-4">
                        <div class="mb-3">
                            <i class="fas fa-key fa-4x text-accent-blue"></i>
                        </div>
                        <h2 class="card-title fw-bold mb-2 text-primary-text">Forgot Password?</h2>
                        <p class="text-secondary">Enter your email to reset your password</p>
                    </div>

                    <form asp-action="ForgotPassword" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger-custom text-danger-accent mb-4 p-2 small"></div>

                        <div class="alert alert-info-custom small mb-4">
                            <i class="fas fa-info-circle me-1"></i> 
                            Enter your email address and we'll send you a link to reset your password.
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Email" class="form-label fw-bold small">
                                <i class="fas fa-envelope me-1"></i> Email Address
                            </label>
                            <input asp-for="Email" class="form-control form-control-lg form-control-custom" placeholder="Enter your email" autofocus />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 mb-3">
                            <button type="submit" class="btn btn-primary-accent btn-lg login-btn">
                                <i class="fas fa-paper-plane me-2"></i> Send Reset Link
                            </button>
                        </div>

                        <div class="text-center mt-3">
                            <a asp-action="Login" class="text-secondary text-decoration-none fw-bold">
                                <i class="fas fa-arrow-left me-1"></i> Back to Login
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}